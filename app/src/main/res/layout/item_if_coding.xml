<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:background="@color/if_coding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/condition_spinner"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:entries="@array/fences"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 만난다면"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/condition_spinner"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/if_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/condition_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동작"
        android:padding="10dp"
        android:background="@color/standard_coding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아니라면"
        android:gravity="center_vertical"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/condition_false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동작"
        android:padding="10dp"
        android:background="@color/standard_coding"/>

</LinearLayout>